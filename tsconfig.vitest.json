{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"target": "ES2020",
		"isolatedModules": true,
		"jsx": "preserve",
		"jsxImportSource": "react",
		"types": ["vitest/globals"],
		"noUnusedLocals": false, // don't need to check if including files for vitests builds.
		"noUnusedParameters": false
	},
	"include": ["vitest/**/*", "src/**/*", "__tests__/**/*", "tailwind.config.ts", "postcss.config.ts"],
	"exclude": ["node_modules", "dist", "e2e"]
}
